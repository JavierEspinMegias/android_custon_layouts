<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppThemeModificada" parent="Theme.AppCompat.DayNight">
        <item name="android:background">@drawable/custom_buttom_shape</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:colorBackground">#3c3c3c</item>
        <item name="buttonStyle">@style/buttonNightStyle</item>
    </style>

    <style name="buttonNightStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:colorBackground">#E7D059</item>
        <item name="android:textColor">@android:color/holo_purple</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>